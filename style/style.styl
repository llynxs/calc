* {
	box-sizing border-box
	vertical-align: top
	
	&:focus {
		outline none
	}
}

body {
	margin: 0
	padding: 0
	width 100%
}

.calc {
	&-wrapper {
		padding-top 100px
		width 100%
		margin 0 auto
	}
	
	&-container {
		width 500px
		margin 0 auto
	}
	
	&-display {
		position relative
		
		&__display {
			width 100%
			height 100px
			text-align: right
			font-size 30px
			
			&__top {
				position: absolute
				top 1px
				right 1px
				border none
				text-align: right
				color #ccc
			}
			
			&__bottom {
				position: absolute
				bottom 1px
				right 1px
				border none
				text-align: right
				color #ccc
			}
		}
	}
	
	&-buttons {
		display flex
		
		&__operators {
			font-size 0
			
			&__wrapper {
				display inline-block
				width 25%
				
				.cancel {
					width 100%
					height 20px
					border none
					border-radius 0
					background #fff
					box-shadow 0 0 1px 0 rgba(0, 0, 0, .5)
				}
			}
			
			&__eq {
				width 100%
				
				.eq {
					width 100%
					height 20px
					border none
					border-radius 0
					background #fff
					box-shadow 0 0 1px 0 rgba(0, 0, 0, .5)
				}
			}
		}
		
		&__buttons {
			font-size 0
			width 75%
			
			&__button {
				width 33.333333%
				display: inline-block
				height 20px
				border none
				border-radius 0
				background #fff
				box-shadow 0 0 1px 0 rgba(0, 0, 0, .5)
				padding: 0
			}
			
			
			
			&__operator {
				width 50%
				height 20px
				border none
				border-radius 0
				background #fff
				box-shadow 0 0 1px 0 rgba(0, 0, 0, .5)
				padding: 0
			}
			
			.zero {
				width 75%
			}
			
			.dot {
				width 25%
			}
		}
	}
}